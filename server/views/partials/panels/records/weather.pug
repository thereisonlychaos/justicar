div(role="dialog", aria-label="channel", layout="column")
  md-toolbar
    div.md-toolbar-tools
      b Channel
  md-progress-linear(ng-show="waiting", md-mode="indeterminate")
  div.error(ng-show="errorMssg") {{errorMssg}}
  md-content(layout="column", style="padding:15px;")
    form(name="weatherForm")
      md-input-container.md-icon-float.md-block
        label Summary (e.g. Strong rain, Very windy)
        input(ng-model="record.summary", ng-disabled="waiting", md-maxlength="25")
      md-input-container.md-block
        label Description
        textarea(ng-model="record.description", md-maxlength="250", rows="3", md-select-on-focus, ng-disabled="waiting")
      h4 Seasons (when to show)
      md-checkbox(ng-model="record.season.spring", aria-label="spring", ng-disabled="waiting") &#127799; Spring
      md-checkbox(ng-model="record.season.summer", aria-label="summer", ng-disabled="waiting") &#127774; Summer
      md-checkbox(ng-model="record.season.autumn", aria-label="autumn", ng-disabled="waiting") &#127809; Autumn
      md-checkbox(ng-model="record.season.winter", aria-label="winter", ng-disabled="waiting") &#10052;&#65039; Winter
  div(flex="none", layout="row")
    md-button.md-primary(type="submit", ng-click="onClickSave()", ng-disabled="waiting") Save
    md-button.md-warn(type="submit", ng-click="onClickCancel()", ng-disabled="waiting") Cancel
